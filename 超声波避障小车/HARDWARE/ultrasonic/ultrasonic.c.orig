#include "ultrasonic.h"
#include "delay.h"
#include "timer.h"

extern u8  TIM2CH1_CAPTURE_STA;
extern u16 TIM2CH1_CAPTURE_VAL;
int  distance = 0;
u16 Ultra_Distance(void)
{

    u16 time;

    GPIO_SetBits(GPIOC,GPIO_Pin_3);
    delay_us(10);//20us
    GPIO_ResetBits(GPIOC,GPIO_Pin_3);
//模块自动发送8个40khz的方波，自动检测是否有信号返回
    if(TIM2CH1_CAPTURE_STA&0x80)
    {
        time = TIM2CH1_CAPTURE_STA&0x3f;//溢出次数
        time *=65536;
        time+=TIM2CH1_CAPTURE_VAL;
        distance=time *170;
        distance /= 10000;
        if((distance>0)&&(distance<34))
        {
            if (((distance<=17)&&(distance>13))||((distance>17)&&(distance<=21)))

            {

                dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1100);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1100); //右轮
            }


            if ((distance<=13)&&(distance>9))//往右侧偏

            {

                dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1300);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1000); //右轮
            }
			if((distance>21)&&(distance<=25))
			{
				dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1000);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1300); //右轮
			}

            if ((distance<=9)&&(distance>5))//往右侧偏

            {

                dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1400);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1000); //右轮
            }
			if((distance>25)&&(distance<=29))
			{
			                dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1000);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1400); //右轮
			}

            if ((distance<=5)&&(distance>2))//往右侧偏

            {

                dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1500);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1000); //右轮
            }
			if((distance>29)&&(distance<=33))
			{
                dianji1IN1=1;
                dianji1IN2=0;
                TIM_SetCompare2(TIM3,1000);//左轮
                dianji2IN1=1;
                dianji2IN2=0;
                TIM_SetCompare3(TIM3,1500); //右轮			
			}


        }
        if(distance>34)//距离大于34时，停止转动
        {
            TIM_SetCompare2(TIM3,1999);
            TIM_SetCompare3(TIM3,1999);
        }

        TIM2CH1_CAPTURE_STA=0;//开启下一次捕获
    }

    return distance;
}

